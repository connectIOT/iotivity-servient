{
  "comment": "OCF Resource, JSON Instance Format example",
  "resourcePath": "/example/freezer/temperature",
  "discoverable": true,
  "observable": true,
  "linkAttributes": {
    "title": "Freezer Temperature",
    "ins": "freezer.temperature"
  },
  "defaultInterface": ["oic.if.s"],
  "properties": {
    "id": {
      "interfaces": ["oic.if.baseline"],
      "value": "freezer.temperature"
    },
    "n": {
      "interfaces": ["oic.if.baseline"],
      "value": "Freezer Temperature"
    }
  },
  "resourceTypes": {
    "oic.r.temperature": {
      "properties": {
        "temperature": {
          "interfaces": ["oic.if.s"],
          "value": 0,
        },
        "units": {
          "interfaces": ["oic.if.r"],
          "value": "C",
        },
        "range": {
          "interfaces": ["oic.if.r"],
          "value": [0, 100],
        }
      }
    },
    "oic.r.conditionalnotification": {
      "properties": {
        "minnotificationperiod": {
          "interfaces": ["oic.if.r", "oic.if.rw"],
          "value": 10,
        },
        "maxnotificationperiod": {
          "interfaces": ["oic.if.r", "oic.if.rw"],
          "value": 600,
        },
        "threshold": {
          "interfaces": ["oic.if.r", "oic.if.rw"],
          "value": 1,
        }
      }
    }
  }
}
