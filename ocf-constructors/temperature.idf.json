{
  "comment": "OCF Resource Instance Definition Format example",
  "resourcePath": "/example/freezer/temperature",
  "discoverable": true,
  "observable": true,
  "commonProperties": [
    {
      "name": "id",
      "interfaces": ["oic.if.baseline"],
      "value": "freezer.temperature"
    },
    {
      "name": "n",
      "interfaces": ["oic.if.baseline"],
      "value": "Freezer Temperature"
    }
  ],
  "resourceTypes": [
    {
      "type": "oic.r.temperature",
      "properties": [
        {
          "name": "temperature",
          "interfaces": ["oic.if.s"],
          "value": 0,
        },
        {
          "name": "units",
          "interfaces": ["oic.if.r"],
          "value": "C",
        },
        {
          "name": "range",
          "interfaces": ["oic.if.r"],
          "value": [0, 100],
        }
      ]
    },
    {
      "type": "oic.r.conditionalnotification",
      "properties": [
        {
          "name": "minnotificationperiod",
          "interfaces": ["oic.if.r", "oic.if.rw"],
          "value": 10,
        },
        {
          "name": "maxnotificationperiod",
          "interfaces": ["oic.if.r", "oic.if.rw"],
          "value": 600,
        },
        {
          "name": "threshold",
          "interfaces": ["oic.if.r", "oic.if.rw"],
          "value": 1,
        }
      ]
    }
  ]
}
